@model dynamic
@{
    ViewData["Title"] = "ManageRoles";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card">
    <div class="card-title"><h3>All roles</h3></div>
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <td>First Name</td>
                    <td>Last Name</td>
                    <td>Code</td>
                    <td>Role</td>
                    <td>Change Role</td>
                </tr>
            </thead>
            <tbody>
                @{
                    List<Tuple<string, string>> allRoles = Model.Roles;
                    foreach (Doctor d in Model.Users)
                    {
                        Tuple<string, string> role = null;
                        foreach (var r in allRoles)
                        {

                            if (r.Item1 == d.Id)
                            {
                                role = r;
                                break;
                            }
                        }
                        <tr>
                            <td>@d.firstName</td>
                            <td>@d.lastName</td>
                            <td>ABC123</td>
                            <td>@role.Item2</td>
                            <td>
                                <form asp-action="SetRole" method="post" class="form-inline">
                                    <input type="hidden" name="id" value="@d.Id" />
                                    <div class="form-group mb-4 ml-2 mr-1">
                                        <select class="custom-select" name="role" id="role">
                                            <option value="DefaultUser">DefaultUser</option>
                                            <option value="Administrator">Administrator</option>
                                            <option value="Restricted">Restricted</option>
                                        </select>
                                    </div>
                                    <div class="form-group mt-1">
                                        <input type="submit" class="btn btn-success" value="Save" />
                                    </div>

                                </form>
                            </td>
                            <td>
                                <input class="btn btn-info" type="button" title="View" value="View" onclick="location.href='@Url.Action("EditDoctor", "Admin", new { doctorId = d.Id })'" />
                            </td>
                        </tr>
                    }
                }

            </tbody>
        </table>
    </div>
</div>

