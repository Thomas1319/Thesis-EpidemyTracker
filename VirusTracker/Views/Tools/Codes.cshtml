@model List<Codes>
@{
    ViewData["Title"] = "Codes";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}

    <div class="card mt-3 mb-3">
        <h2 class="card-title">Codes</h2>

        <div class="card-body">
           <form class="form-inline" asp-action="GenerateCodes" method="post">
               <div class="form-group">
                   <label for="number">Select the amount of codes to be generated:</label>
                </div>
               <div class="form-group mb-4 ml-2 mr-1">
                   <select class="custom-select" name="number" id="number">
                       <option value="1">1</option>
                       <option value="2">2</option>
                       <option value="3">3</option>
                       <option value="4">4</option>
                       <option value="5">5</option>
                       <option value="6">6</option>
                       <option value="7">7</option>
                       <option value="8">8</option>
                       <option value="9">9</option>
                       <option value="10">10</option>
                   </select>
               </div>
               <div class="form-group mt-1">
                   <input type="submit" class="btn btn-success" value="Generate" />
               </div>
           </form>
            <div class="row">
                @foreach(var c in Model)
                {
                    if(c.doctorId != null)
                    {
                <div class="col-3 row">
                    <a class="text-success col-9" href="@Url.Action("EditDoctor", "Admin", new { doctorId = c.doctorId})">@c.Code</a>
                    <input class="btn text-danger font-weight-bolder col-3 mb-1" type="button" title="X" value="X" onclick="location.href='@Url.Action("DeleteCode", new { id = c.Id})'" />
                   @* <button class="text-danger font-weight-bolder" href="@Url.Action("DeleteCode", new { id = c.Id})">X</button>*@
                </div>
                    } else
                    {
                <div class="col-3 text-dark row">
                    <p class="text-dark col-9">@c.Code</p>
                    <input class="btn text-danger font-weight-bolder col-3 mb-1" type="button" title="X" value="X" onclick="location.href='@Url.Action("DeleteCode", new { id = c.Id})'" />

                    @*<button class="text-danger font-weight-bolder" href="@Url.Action("DeleteCode", new { id = c.Id})">X</button>*@
                </div>
                    }
                }
            </div>
        </div>
    </div>


