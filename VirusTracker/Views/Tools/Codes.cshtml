@model List<Codes>
@{
    ViewData["Title"] = "Codes";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}

    <div class="card mt-4">
        <div class="card-header bg-primary border-bottom">
            <div class="row">
                <h4 class="text-white ml-2">Codes</h4>
            </div>
        </div>
        <div class="card-body">
            <div class="row no-gutters">
                <form asp-action="GenerateCodes" method="post" class="col-12">
                    <div class="row no-gutters">
                        <div class="col-4">
                            <label class="mt-3" for="number">Select the amount of codes to be generated:</label>
                        </div>
                        <div class="col-1 float-left">
                            <select class="custom-select" name="number" id="number">
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                                <option value="6">6</option>
                                <option value="7">7</option>
                                <option value="8">8</option>
                                <option value="9">9</option>
                                <option value="10">10</option>
                            </select>
                        </div>
                        <div class="col-2 mt-1">
                            <input type="submit" class="btn btn-info" value="Generate" />
                        </div>
                    </div>
                    
                </form>
            </div>


            <div class="row">
                @foreach (var c in Model)
                {
                    if (c.doctorId != null)
                    {
                        <div class="col-3 row">
                            <button class="btn btn-success col-9" onclick="location.href='@Url.Action("EditDoctor", "Admin", new { doctorId = c.doctorId})'">@c.Code</button>
                            <input class="btn text-danger font-weight-bolder col-3 mb-1" type="button" title="X" value="X" onclick="location.href='@Url.Action("DeleteCode", new { id = c.Id})'" />
                            @* <button class="text-danger font-weight-bolder" href="@Url.Action("DeleteCode", new { id = c.Id})">X</button>*@
                        </div>
                    }
                    else
                    {
                        <div class="col-3 row">
                            <p class="btn btn-dark col-9">@c.Code</p>
                            <input class="btn text-danger font-weight-bolder col-3 mb-1" type="button" title="X" value="X" onclick="location.href='@Url.Action("DeleteCode", new { id = c.Id})'" />

                            @*<button class="text-danger font-weight-bolder" href="@Url.Action("DeleteCode", new { id = c.Id})">X</button>*@
                        </div>
                    }
                }
            </div>
        </div>
    </div>


